FIND_PATH(QPBO_INCLUDE_DIR QPBO.h 
    /usr/local/src/extern-extra/QPBO/include
)
FIND_LIBRARY(QPBO_LIBRARIES libqpbo.a
  /usr/local/src/extern-extra/QPBO/lib
)

IF (QPBO_INCLUDE_DIR)
  SET(QPBO_INCLUDE_FOUND "YES")
  MESSAGE(STATUS "Found QPBO include dir: ${QPBO_INCLUDE_DIR}")
ENDIF (QPBO_INCLUDE_DIR)

